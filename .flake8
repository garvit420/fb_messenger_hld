[flake8]
# Flake8 linting configuration
# Ensures code quality and PEP8 compliance

# Maximum line length (matches black configuration)
max-line-length = 100

# Complexity threshold for functions
max-complexity = 10

# Ignore specific errors
# E501: Line too long - handled by black formatter
# W503: Line break before binary operator - conflicts with black
# E203: Whitespace before ':' - conflicts with black
extend-ignore = E501, W503, E203

# Exclude directories from linting
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,
    .venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    migrations

# Per-file ignores
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py: F401
    # Allow assert statements in tests
    tests/*: S101

# Statistics output
statistics = True
count = True
